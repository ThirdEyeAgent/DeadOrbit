<Window x:Class="DeadOrbitCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeadOrbit Capture" Height="720" Width="1100">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
      <Button Content="Start Services" Click="Start_Click"/>
      <Button Content="Stop Services" Click="Stop_Click" Margin="6,0,0,0"/>
      <Button Content="Export Log" Click="ExportLog_Click" Margin="6,0,0,0"/>
      <Button Content="Show interfaces" Click="ShowIfaces_Click" Margin="6,0,0,0"/>

      <TextBlock Text="Signature strategy:" Margin="16,0,0,0" VerticalAlignment="Center" Foreground="LightBlue"/>
      <ComboBox x:Name="SignatureModeBox" Width="160" Margin="6,0,0,0" VerticalAlignment="Center">
        <ComboBoxItem Content="Zero" IsSelected="True"/>
        <ComboBoxItem Content="Echo"/>
        <ComboBoxItem Content="Random"/>
      </ComboBox>

      <TextBlock x:Name="IpText" Margin="16,0,0,0" VerticalAlignment="Center" />
    </StackPanel>

    <TextBlock Grid.Row="1"
               Text="Set RPCS3 DNS to the IPv4 shown below. DNS queries and HTTP requests will appear in the log."
               Foreground="LightBlue" Margin="0,6,0,6"/>

    <ListBox x:Name="LogList" Grid.Row="2" DisplayMemberPath="Display"
             ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    <TextBlock Grid.Row="3"
               Text="Logs saved to the Logs folder. Requires Administrator (ports 53/80)."
               Foreground="LightBlue" Margin="0,6,0,0"/>
  </Grid>
</Window>
